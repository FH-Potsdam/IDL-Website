{% include 'header.njk' %}
{% from './macros.njk' import imageById, peopleTeaser, publicationTeaser %}

<div class="intro-container max-width default">
	
  <h1>{{project.name[locale]}}</h1>

   {% if project.excerpt[locale] %}
  <div class="intro">
 <p>{{project.excerpt[locale]}}</p>
  </div>
  {% endif %}

</div>

{#
<h1>{{project.name[locale]}}</h1>
{% if project.subtitle[locale] %}<h2>{{project.subtitle[locale]}}</h2>{% endif %}
{% if project.excerpt[locale] %}<p>{{project.excerpt[locale]}}</p>{% endif %}
#}

{% if project.thumbnail_id %}
<div class="project-hero">
<img src="{{imageById(project.thumbnail_id, attachments)}}" alt="{{project.name[locale]}}">
</div>
{% endif %}


<div class="project-facts-container">

  <div class="team">
    <span>Team</span>
    <ul>
    {% for p in people | sort(true, false, "sort_name") %}
    {% if p.wp_id in project.project_team %}
    {{ peopleTeaser(p, locale) }}
    {% endif %}
    {% endfor %}
    </ul>
  </div>


 {% if project.filter_services %}
  <div class="services">
    <span>Services</span>
    <ul>
      
      {% for s in project.filter_services %}
    <li><a href="/{{locale}}/services/#{{s | slugify}}"> {{ s }}</a></li>
    {% endfor %}
    </ul>
  </div>
   {% endif %}


   {% if project.project_year %}
  <div class="year">   
        <span>
      {% if locale == 'en' %} Year {% else %} Jahr {% endif %}
    </span>
       {{ project.project_year }}   
  </div>
    {% endif %}  


 {% if project.project_partners_name.length > 0 %}
  <div class="partner">   
    <span>
      {% if locale == 'en' %} Partner {% else %} Kooperationspartner {% endif %}
    </span>
    <ul>
    {% for p in project.project_partners_name %}
       
    <li>{{ p }}</li>
    {% endfor %}
    </ul>
  </div>
{% endif %}  


     {% if project.project_website %}
    <div class="website">
    <span>Website</span>
       <a href="{{project.project_website}}">{{project.project_website}}</a>
  </div>
    {% endif %}  


      {% if project.project_funding_logo %}
    <div class="funding">
    <span>
        {% if locale == 'en' %} Sponsor {% else %} Förderer {% endif %}
    </span>
       <img src="{{project.project_funding_logo}}" alt="{{project.project_funding_name}}">
    </div>
    {% endif %}  


    {% if project.project_client_name.length > 0 %}
    <div class="funding">
    <span>
        {% if locale == 'en' %} Client {% else %} Auftraggeber {% endif %}
    </span>
       {{project.project_client_name}}
    </div>
    {% endif %}  

 

</div>




<div class="content-container">

{{project.page[locale] | safe}}

</div>

{% if laufschrift_green and laufschrift_black %}
<div class="laufschrift-container">

	<div class="scroll1">{{laufschrift_green}}</div>
	<div class="scroll2">{{laufschrift_black}}</div>

</div>
{% endif %}

{# Publications #}
{%if project.related_publications%}
<div class="publications">
 <h2>{% if locale == 'en' %}Publications{% else %}Publikationen{% endif %}</h2>
{% for p in publications | sort(true, false, "year") %}
{% if p.wp_id in project.related_publications %}


{{ publicationTeaser(p, locale, people, attachments) }}

{% endif %}
{% endfor %}
</div>
{% endif %}






{% include 'footer.njk' %}