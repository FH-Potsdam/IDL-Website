{% include 'header.njk' %}
{% from './macros.njk' import imageById, peopleTeaser, publicationTeaser %}

{% if locale == 'de' %}
{% set people = collections.people_de %}
{% else %}
{% set people = collections.people_en %}
{% endif %}

<div class="intro-container max-width default">
	
  <h1>{{project.name[locale]}}</h1>

   {% if project.excerpt[locale] %}
  <div class="intro">
 <p>{{project.excerpt[locale]}}</p>
  </div>
  {% endif %}

</div>

{#
<h1>{{project.name[locale]}}</h1>
{% if project.subtitle[locale] %}<h2>{{project.subtitle[locale]}}</h2>{% endif %}
{% if project.excerpt[locale] %}<p>{{project.excerpt[locale]}}</p>{% endif %}
#}

{% if project.thumbnail_id %}
<div class="project-hero">
<img src="{{imageById(project.thumbnail_id, attachments)}}" alt="{{project.name[locale]}}">
</div>
{% endif %}


<div class="project-facts-container">

  <div class="team">
    <span>Team</span>
    <ul>
    {% for p in people | sort(true, false, "sort_name") %}
    {% if p.wp_id in project.project_team %}
    {{ peopleTeaser(p, locale) }}
    {% endif %}
    {% endfor %}
    </ul>
  </div>


 {% if project.filter_services %}
  <div class="services">
    <span>Services</span>
    <ul>
      
      {% for s in project.filter_services %}
    <li><a href="/{{locale}}/services/#{{s | slugify}}"> {{ s }}</a></li>
    {% endfor %}
    </ul>
  </div>
   {% endif %}


   {% if project.project_year %}
  <div class="year">   
        <span>
      {% if locale == 'en' %} Year {% else %} Jahr {% endif %}
    </span>
       {{ project.project_year }}   
  </div>
    {% endif %}  


 {% if project.project_partners_name.length > 0 %}
  <div class="partner">   
    <span>
      {% if locale == 'en' %} Partner {% else %} Kooperationspartner {% endif %}
    </span>
    <ul>
    {% for p in project.project_partners_name %}
       
    <li>{{ p }}</li>
    {% endfor %}
    </ul>
  </div>
{% endif %}  


     {% if project.project_website %}
    <div class="website">
    <span>Website</span>
       <a href="{{project.project_website}}">{{project.project_website}}</a>
  </div>
    {% endif %}  


      {% if project.project_funding_logo %}
    <div class="funding">
    <span>
        {% if locale == 'en' %} Sponsor {% else %} Förderer {% endif %}
    </span>
       <img src="{{project.project_funding_logo}}" alt="{{project.project_funding_name}}">
    </div>
    {% endif %}  


    {% if project.project_client_name %}
    <div class="funding">
    <span>
        {% if locale == 'en' %} Client {% else %} Auftraggeber {% endif %}
    </span>
       {{project.project_client_name}}
    </div>
    {% endif %}  

 

</div>

{% set groupSize = project.group | length %}
{% if groupSize > 0 %}
<h3>Tags</h3>
<ul>
  {% for g in project.group %}
  <li>{{g}}</li>
  {% endfor %}
</ul>
{% endif %}

<h3>Meta Data</h3>
<dl>

{# YEAR #}
  <dt>{% if locale == 'de' %}Jahr{% else %}Year{% endif %}</dt>
  <dd>{{project.project_year}}</dd>

  <dt>Website</dt>
  <dd>{{project.project_website}}</dd>

{# CLIENTS #}
{% set clientSize = project.project_client_name | length %}
{% if clientSize > 0 %}
  <dt>{% if locale == 'de' %}Kunde{% else %}Client{% endif %}</dt>
  <dd>
    {% for client in project.project_client_name %}
    {% if project.project_client_url[forloop.index0] %}<a href="{{ project.project_client_url[forloop.index0] }}">{% endif %}
    {% if project.project_client_logo[forloop.index0] %}
    <img src="{{project.project_client_logo[forloop.index0]}}" alt="{{client}}" />
    {% else %}
    {{client}}
    {% endif %}
    {% if project.project_client_url[forloop.index0] %}</a>{% endif %}
    {% endfor %}
  </dd>
{% endif %}

{# FUNDING #}
{% set fundingSize = project.project_funding_name | length %}
{% if clientSize > 0 %}
  <dt>{% if locale == 'de' %}Kunde{% else %}Client{% endif %}</dt>
  <dd>
    {% for client in project.project_client_name %}
    {% if project.project_client_url[forloop.index0] %}<a href="{{ project.project_client_url[forloop.index0] }}">{% endif %}
    {% if project.project_client_logo[forloop.index0] %}
    <img src="{{project.project_client_logo[forloop.index0]}}" alt="{{client}}" />
    {% else %}
    {{client}}
    {% endif %}
    {% if project.project_client_url[forloop.index0] %}</a>{% endif %}
    {% endfor %}
  </dd>
{% endif %}

{# Partners #}
{% set partnerSize = project.project_partners_name | length %}
{% if partnerSize > 0 %}
  <dt>{% if locale == 'de' %}Partner{% else %}Partners{% endif %}</dt>
  <dd>
    {% for partner in project.project_partners_name %}
    {% if project.project_partners_url[forloop.index0] %}<a href="{{ project.project_partners_url[forloop.index0] }}">{% endif %}
    {{partner}}
    {% if project.project_partners_url[forloop.index0] %}</a>{% endif %}
    {% endfor %}
  </dd>
{% endif %}

{# External Team #}
<dt>External Team</dt>
{% set externalSize = project.project_team_external_name | length %}
{% if externalSize > 0 %}
  <dd>
    {% for team in project.project_team_external_name %}
    {% if project.project_team_external_url[forloop.index0] %}<a href="{{ project.project_partners_url[forloop.index0] }}">{% endif %}
    {{team}}
    {% if project.project_team_external_url[forloop.index0] %}</a>{% endif %}
    {% endfor %}
  </dd>
{% endif %}
</dl>

{# Team #}
<h2>Team</h2>
{% for p in people | sort(true, false, "sort_name") %}
{% if p.wp_id in project.project_team %}
{{ peopleTeaser(p, locale) }}
{% endif %}
{% endfor %}

{# Publications #}
<h2>Publications</h2>
{% for p in publications | sort(true, false, "year") %}
{% if p.wp_id in project.related_publications %}
{{ publicationTeaser(p, locale, people, attachments) }}
{% endif %}
{% endfor %}

{{project.page[locale] | safe}}

{% include 'footer.njk' %}