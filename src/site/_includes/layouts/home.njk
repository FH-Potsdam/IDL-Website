{% for p in collections.publications | sort(true, false, 'year') %}
{% if loop.index < 4 %}
{{publicationTeaser(p, locale, people)}}
{% endif %}
{% endfor %}

	</div>

	<div class="more-link">
		{% set lang = page.url.slice(1, 3) %}
	<a href="/{{locale}}/publications/" class="button">{% if lang == 'en' %}Show all publications{% else %}Alle Publikationen anzeigen{% endif %}</a>
	</div>

</section>

