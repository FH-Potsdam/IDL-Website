{% include 'header.njk' %}
{% from './macros.njk' import projectTeaser, publicationTeaser, eventTeaser %}

{% if locale == 'de' %}
{% set people = collections.people_de %}
{% set projects = collections.projects_de %}
{% set events = collections.events_de %}
{% else %}
{% set people = collections.people_en %}
{% set projects = collections.projects_en %}
{% set events = collections.events_de %}
{% endif %}

{% set lang = page.url.slice(1, 3) %}

<div class="intro-container max-width home">
	{{ content | safe }}
</div>

<div class="laufschrift-container">

	<div class="scroll1">{{laufschrift_green}}</div>
	<div class="scroll2">{{laufschrift_black}}</div>

</div>

<section>

	<div class="projects">

		{% for p in projects | sort(true, false, "year") %}
			{% if p.data.featured_home == true %}
			{{ projectTeaser(p, lang) }}
			{% endif %}
		{% endfor %}

	</div>
	{# Projects Ende #}


	<div class="more-link">
		
	<a href="/{{locale}}/projects/" class="button">{% if lang == 'en' %}Show all projects{% else %}Alle Projekte anzeigen{% endif %}</a>
	</div>

</section>

{% set events_home = 0 %}
{% for p in events | sort(true, false, "year") %}
	{% if p.data.featured_home == true %}
	{% set events_home = events_home + 1 %}
	{% endif %}
{% endfor %}

{% if events_home > 0 %}

<section>
	<div class="event-container">
		<h2>{% if lang == 'en' %}Events{% else %}Aktivitäten{% endif %}</h2>	

		{% for p in events | sort(true, false, "sort_name") %}
			{% if p.data.featured_home == true %}
			{{ eventTeaser(p, lang) }}
			{% endif %}
		{% endfor %}

	</div>

</section>
{% endif %}



<section>
	
	<div class="publications">
	<h2>{% if lang == 'en' %}Recent Publications{% else %}Publikationen{% endif %}</h2>

