{% include 'header.njk' %}
{% include 'main.njk' %}
{% from './macros.njk' import projectTeaser %}
{% if locale == 'de' %}
{% set people = collections.people_de %}
{% set projects = collections.projects_de %}
{% else %}
{% set people = collections.people_en %}
{% set projects = collections.projects_de %}
{% endif %}

{% set lang = page.url.slice(1, 3) %}
{{ content }}

<div class="filter-container">
  <div class="filter-group">
  Themen
    <div class="button-group | js-filter-button-group">
      <button class="selectTheme filterButtons | js-button active" value="">Alle</button>
      <button class="selectTheme filterButtons | js-button" value="speculation">Speculation</button>
      <button class="selectTheme filterButtons | js-button" value="dashboard">Dashboard</button>
      <button class="selectTheme filterButtons | js-button" value="geovis">GeoVis</button>
      <button class="selectTheme filterButtons | js-button" value="infovis">InfoVis</button>
      <button class="selectTheme filterButtons | js-button" value="portal">Portal</button>
      <button class="selectTheme filterButtons | js-button" value="physical">Physical</button>
      <button class="selectTheme filterButtons | js-button" value="service">Service</button>
    </div>
  </div>

  <div class="filter-group">
  Services
    <div class="button-group | js-filter-button-group">
      <button class="selectService filterButtons | js-button active" value="">Alle</button>
      <button class="selectService filterButtons | js-button" value="prototyping">Prototyping</button>
      <button class="selectService filterButtons | js-button" value="uiux">UI/UX</button>
      <button class="selectService filterButtons | js-button" value="human-centered-design">Human-Centered Design</button>
      <button class="selectService filterButtons | js-button" value="design-thinking">Design Thinking</button>
      <button class="selectService filterButtons | js-button" value="service-design">Service Design</button>
    </div>
  </div>

  <div class="filter-group">
  Art
    <div class="button-group | js-filter-button-group">
      <button class="selectArt filterButtons | js-button active" value="">Alle</button>
      <button class="selectArt filterButtons | js-button" value="forschung">Forschung</button>
      <button class="selectArt filterButtons | js-button" value="transfer">Transfer</button>
    </div>
  </div>
</div>

<div class="projects" id="projects">
{% for p in projects | sort(true, false, "year") %}
	{{ projectTeaser(p, lang) }}
{% endfor %}
</div>

<div class="laufschrift-container">
	<div class="scroll1">Interaction × Design × Lab × Interaction × Design × Lab × Interaction × Design × Lab × Interaction × Design × Lab × Interaction × Design × Lab × Interaction × Design × Lab × </div>
	<div class="scroll2">Aufträge × Forschung × Kooperation × Wirtschaft × Karten × UX/UI × Visualisierung</div>
</div>

{% include 'footer.njk' %}