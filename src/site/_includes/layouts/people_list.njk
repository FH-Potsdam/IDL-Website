{% include 'header.njk' %}
{% include 'people.njk' %}
{% from './macros.njk' import imageById %}
{{ content | safe }}

{% if locale == 'de' %}
{% set people = collections.people_de | sort(true, false, "sort_name") %}
{% else %}
{% set people = collections.people_en | sort(true, false, "sort_name") %}
{% endif %}

	{% for pList in peopleConfig.full %}
		
<div class="people">
<h2>{{ pList.title[locale] }}</h2>
	
	{% for p in people %}
		{% if p.data.group == pList.key %}
		
{% if pList.singles %}

<a href="{{p.url}}" title="{{p.data.name}}" class="people-container">

		<div class="people-image {% if p.data.image_link or p.data.thumbnail_id %} checked {% endif %}">
			{% if p.data.thumbnail_id %}
			<img src="{{(p.data.thumbnail_id)}}" alt="{{p.data.name}}" loading="lazy" />
			{% elif p.data.image_link %}
			<img src="{{(p.data.image_link)}}" alt="{{p.data.name}}" loading="lazy" />
			{% endif %}
		</div>

		<div class="people-desc-container">

			<div class="people-name">
				<span>{{p.data.name}}</span> 
			</div>
            
            <div class="people-position">
				{{p.data.subtitle}}
			</div>

		</div>

	</a>
			
{% endif %}
		
		{% endif %}
	{% endfor %}

</div>
{% endfor %}

